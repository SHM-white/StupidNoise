<UserControl x:Class="StupidNoise.SpinBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StupidNoise"
             mc:Ignorable="d" 
             d:DesignHeight="23" d:DesignWidth="100">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBox x:Name="txtBoxValue" Grid.Column="0"
                 TextAlignment="Center" VerticalContentAlignment="Center"
                 Height="23" Padding="2,0"/>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button Grid.Row="0" x:Name="btnPlus" FontSize="8" Click="btnPlus_Click" Content="&#x25B2;" Padding="2,-2"/>
            <Button Grid.Row="1" x:Name="btnMinor" FontSize="8" Click="btnMinor_Click" Content="&#x25BC;" Padding="2,-2"/>
        </Grid>
    </Grid>
</UserControl>
