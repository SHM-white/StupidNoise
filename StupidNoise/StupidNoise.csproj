<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <!-- Use App.ico as application (Win32) icon when present -->
    <ApplicationIcon Condition="Exists('App.ico')">App.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Hardcodet.NotifyIcon.Wpf" Version="2.0.1" />
  </ItemGroup>

  <!-- Include App.ico as WPF Resource when present so it can be loaded via pack URI -->
  <ItemGroup Condition="Exists('App.ico')">
    <Resource Include="App.ico" />
  </ItemGroup>

  <ItemGroup>
    <None Update="1.wav">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
